<!doctype html>

<html ng-app="Todo">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>TodoApp main page</title>

  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
  <style>
    html  { overflow-y:scroll;}
    body  {padding-top:50px;}
    #todo-list  {margin-bottom:30px;}
  </style>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular.min.js"></script>

  <script src="js/controllers/main.js"></script>
  <script src="js/services/todos.js"></script>
  <script src="js/core.js"></script>

</head>

<body ng-controller="mainController">

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
   <div class="container">
    <form class="navbar-form pull-right" action="/logout" method="get">
          <p>
              Welcome, <strong><%= user.local.email%></strong>
              <button type="submit" class="btn btn-primary">Logout</button>
          </p>
    </form>
   </div>
  </div>
 </div>



  <div class="container">

    <div class="jumbotron text-center">
      <h1>Todos remaining:  <span class="label label-info">{{todos.length}}</span></h1>
    </div>

    <div id="todo-list" class="row">
      <div class="col-s,-4 col-sm-offset-4">

        <div class="checkbox" ng-repeat="todo in todos">
          <label>
            <input type="checkbox" ng-click="deleteTodo(todo._id)"> {{todo.text}}
          </label>
        </div>
      </div>
    </div>

    <div id="todo-form" class="row">
      <div class="col-sm-8 col-sm-offset-2 text-center">
        <form>
          <div class="form-group">

            <input type="text" class="form-control input-lg text-center" placeholder="Add your todo! " ng-model="formData.text">
          </div>
          <button type="submit" class="btn btn-primary btn-lg" ng-click="createTodo()">Add</button>
        </form>
      </div>
    </div>
  </div>

</body>
</html>
